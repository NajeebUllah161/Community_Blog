<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_dialogues.EditCommentDialogue">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:fontFamily="@font/roboto_black"
        android:text="Edit Comment"
        android:textColor="@color/black"
        android:textSize="@dimen/_15font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/postBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/postBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postBtn"
        android:layout_width="@dimen/_58mdp"
        android:layout_height="@dimen/_31mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:layout_marginEnd="@dimen/_12mdp"
        android:background="@drawable/follow_active_btn"
        android:enabled="false"
        android:text="Update"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:background="#DADADA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postBtn" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImgEditComment"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginTop="@dimen/_6mdp"
        android:padding="@dimen/_3mdp"
        android:src="@drawable/placeholder"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@id/view10" />

    <View
        android:id="@+id/view9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gray_circle"
        app:layout_constraintBottom_toBottomOf="@id/profileImgEditComment"
        app:layout_constraintEnd_toEndOf="@+id/profileImgEditComment"
        app:layout_constraintStart_toStartOf="@+id/profileImgEditComment"
        app:layout_constraintTop_toTopOf="@+id/profileImgEditComment" />

    <TextView
        android:id="@+id/userNameEditComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6mdp"
        android:text="Your Name"
        android:textColor="@color/black"
        android:textSize="@dimen/_14mdp"
        app:layout_constraintBottom_toTopOf="@+id/userProfessionEditComment"
        app:layout_constraintStart_toEndOf="@+id/profileImgEditComment"
        app:layout_constraintTop_toTopOf="@+id/profileImgEditComment"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/userProfessionEditComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation"
        app:layout_constraintBottom_toBottomOf="@+id/profileImgEditComment"
        app:layout_constraintStart_toStartOf="@+id/userNameEditComment"
        app:layout_constraintTop_toBottomOf="@+id/userNameEditComment" />

    <EditText
        android:id="@+id/commentDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:maxLength="250"
        android:layout_marginTop="@dimen/_16mdp"
        android:layout_marginBottom="@dimen/_32mdp"
        android:layout_marginHorizontal="@dimen/_8mdp"
        android:gravity="top"
        android:hint="Edit Your Comment ..."
        android:inputType="textMultiLine|textPersonName"
        android:maxLines="4"
        android:paddingTop="@dimen/_8mdp"
        android:textSize="@dimen/_18font_mdp"
        app:layout_constraintBottom_toTopOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfessionEditComment" />

    <ImageView
        android:id="@+id/addRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12mdp"
        android:layout_marginBottom="@dimen/_6mdp"
        android:src="@drawable/ic_recording_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/audioContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8mdp"
        android:background="@drawable/follow_active_btn"
        android:orientation="horizontal"
        android:padding="@dimen/_4mdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/addRecording"
        app:layout_constraintEnd_toStartOf="@+id/addRecording"
        app:layout_constraintTop_toTopOf="@+id/addRecording">

        <TextView
            android:id="@+id/recordingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:src="@drawable/ic_pause"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:src="@drawable/ic_resume"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/removeRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_cross_audio"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/audioContainer"
        app:layout_constraintEnd_toEndOf="@+id/audioContainer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/audioContainer"
        app:layout_constraintTop_toBottomOf="@+id/view11" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12mdp"
        android:text="Update your comment"
        android:textColor="@color/black"
        android:textSize="@dimen/_12font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/addRecording"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addRecording" />

    <View
        android:id="@+id/view11"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1mdp"
        android:layout_marginBottom="@dimen/_6mdp"
        android:background="#DADADA"
        app:layout_constraintBottom_toTopOf="@+id/addRecording"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>